VERSION=${1:-$(grep '^\s*version:' meson.build | cut -f2 -d\')}
BUILD=${BUILD:-1}

if [ -z "${ARCH:=}" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i586 ;;
    arm*) ARCH=arm ;;
    aarch64*) ARCH=aarch64 ;;
    *) ARCH=$( uname -m ) ;;
  esac
fi

TOP="${PWD}"
DESTDIR="${TOP}/pkg"
rm -rf "${DESTDIR}"

meson build --prefix=/usr
ninja -C build
DESTDIR="${DESTDIR}" ninja -C build install

find "${DESTDIR}" -print0 | xargs -0 file | grep -e "executable" -e "shared object" | grep ELF | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true
if [ -d "{DESTDIR}/usr/man" ]; then find "${DESTDIR}/usr/man" -type f -exec gzip {} \; ;fi
if [ -d "{DESTDIR}/usr/share/man" ]; then find "${DESTDIR}/usr/share/man" -type f -exec gzip {} \; ;fi

# Installing icons
mkdir -p "$PKG"/usr/share/pixmaps
cat pixmaps/slapt-update-notifier-update.png > "$PKG"/usr/share/pixmaps/slapt-update-notifier-update.png
cat pixmaps/slapt-update-notifier-idle.png > "$PKG"/usr/share/pixmaps/slapt-update-notifier-idle.png
for res in 16 22 24 32 36 48 64 72 96 128 160 192 256 512; do
  mkdir -p "$PKG"/usr/share/icons/hicolor/${res}x${res}/apps
  convert pixmaps/slapt-update-notifier-update.png -resize ${res}x${res} "$PKG"/usr/share/icons/hicolor/${res}x${res}/apps/slapt-update-notifier-update.png
  convert pixmaps/slapt-update-notifier-idle.png -resize ${res}x${res} "$PKG"/usr/share/icons/hicolor/${res}x${res}/apps/slapt-update-notifier-idle.png
done

# For current Slackware
mkdir -p "$PKG"/usr/share/dbus-1
mv "$PKG"/etc/dbus-1/system.d "$PKG"/usr/share/dbus-1
find "$PKG"/etc/dbus-1 -depth -type d -exec rm -rf "{}" \;

mkdir -p "${DESTDIR}/install"
cat slack-desc > "${DESTDIR}/install/slack-desc"
cat slack-required > "${DESTDIR}/install/slack-required"

(cd "${DESTDIR}" && /sbin/makepkg -l y -c n "${TOP}/slapt-update-service-${VERSION}-${ARCH}-${BUILD}.txz")
